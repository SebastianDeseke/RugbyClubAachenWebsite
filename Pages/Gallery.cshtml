@page
@model GalleryModel
@{
    ViewData["Title"] = "Galley";
}

<h1>@ViewData["Title"]</h1>

<p>Willkommen bei der Gallery. Hier wird alle Bilder die hochgeladen wurde angezeigt</p>

<!-- The Gallery displays 20 images at a time-->

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <!-- The header will be dynamic in the sens that it will show the date of the game and group the pictures together-->
                <th>
                    This is the image header
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @for (int i = 0; i < 7; i++)
                {
                    <td>
                        This is the image
                    </td>
                }
            </tr>
            <tr>
                @for (int i = 0; i < 7; i++)
                {
                    <td>
                        This is the image name
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>

